<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Default Title -->
    <system:String x:Key="SelectFromList.DefaultTitle">Entrada de usuario</system:String>

    <!-- Group Selector -->
    <system:String x:Key="SelectFromList.GroupSelector.Label">Grupo de lista:</system:String>
    
    <!-- Buttons -->
    <system:String x:Key="SelectFromList.CheckAll.Button">Marcar todo</system:String>
    <system:String x:Key="SelectFromList.UncheckAll.Button">Desmarcar todo</system:String>
    <system:String x:Key="SelectFromList.ToggleAll.Button">Alternar todo</system:String>
    <system:String x:Key="SelectFromList.Reset.Button">Restablecer</system:String>
    <system:String x:Key="SelectFromList.Select.Button">Seleccionar</system:String>
    
    <!-- Dynamic button labels (when filtered) -->
    <system:String x:Key="SelectFromList.Check.Button">Marcar</system:String>
    <system:String x:Key="SelectFromList.Uncheck.Button">Desmarcar</system:String>
    <system:String x:Key="SelectFromList.Toggle.Button">Alternar</system:String>
    
    <!-- Tooltips -->
    <system:String x:Key="SelectFromList.RegexToggle.Tooltip">Alternar entre el uso de expresiones regulares y el filtrado difuso</system:String>
    
</ResourceDictionary>
