<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <system:String x:Key="Title">Configuración de Burbujas de Cuadrícula</system:String>
    <system:String x:Key="HeaderTitle">Configuración de Burbujas de Cuadrícula</system:String>
    <system:String x:Key="Subtitle">Configurar sistema de coordenadas y tolerancia de ángulo</system:String>
    
    <system:String x:Key="CoordinateSystemHeader">Sistema de Coordenadas</system:String>
    <system:String x:Key="AllGrids">Todas las cuadrículas</system:String>
    <system:String x:Key="AllGridsDescription">Activa/desactiva todas las cuadrículas en la vista activa</system:String>
    <system:String x:Key="TrueNorth">Norte Verdadero</system:String>
    <system:String x:Key="TrueNorthDescription">Utiliza la orientación del norte verdadero</system:String>
    <system:String x:Key="ProjectNorth">Norte del Proyecto</system:String>
    <system:String x:Key="ProjectNorthDescription">Utiliza el sistema de coordenadas del proyecto (aplica el 'Ángulo al Norte Verdadero')</system:String>
    <system:String x:Key="ViewOrientation">Orientación de Vista/Caja de Alcance</system:String>
    <system:String x:Key="ViewOrientationDescription">Utiliza la orientación actual de la vista y las cajas de alcance</system:String>
    
    <system:String x:Key="AngleToleranceHeader">Tolerancia de Ángulo</system:String>
    <system:String x:Key="StrictLabel">1° (Estricto)</system:String>
    <system:String x:Key="PermissiveLabel">40° (Permisivo)</system:String>
    <system:String x:Key="HowThisWorks">Cómo funciona</system:String>
    <system:String x:Key="HowThisWorksDescription">Controla qué tan cerca deben alinearse las cuadrículas con el sistema de coordenadas elegido. Valores bajos = solo cuadrículas rectas. Valores altos = incluye cuadrículas angulares.</system:String>
    
    <system:String x:Key="AngleDescription1">Muy estricto - solo cuadrículas perfectamente alineadas</system:String>
    <system:String x:Key="AngleDescription5">Ajustado - bueno para diseños de cuadrícula precisos</system:String>
    <system:String x:Key="AngleDescription10">Moderado - bueno para la mayoría de los casos</system:String>
    <system:String x:Key="AngleDescription15">Relajado - incluye cuadrículas ligeramente angulares</system:String>
    <system:String x:Key="AngleDescription25">Permisivo - incluye más cuadrículas angulares</system:String>
    <system:String x:Key="AngleDescription35">Muy permisivo - incluye la mayoría de las orientaciones</system:String>
    <system:String x:Key="AngleDescription40">Tolerancia máxima - incluye cuadrículas muy angulares</system:String>
    
    <system:String x:Key="Cancel">Cancelar</system:String>
    <system:String x:Key="Continue">Continuar</system:String>
</ResourceDictionary>
