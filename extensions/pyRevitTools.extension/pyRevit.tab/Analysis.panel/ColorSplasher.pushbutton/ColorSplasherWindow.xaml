<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:s="clr-namespace:System;assembly=mscorlib"
        Title="{DynamicResource ColorSplasher.Title}"
        Height="580" Width="500" MinWidth="550" MaxWidth="550" MinHeight="550"
        ShowInTaskbar="True" ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen" Topmost="True">
    <Window.Resources>
        <!-- Style for Set Colors button (blue with white text) -->
        <Style x:Key="SetColorsButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#0066CC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A7AE6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="12,2,12,12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="3"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- LEFT COLUMN - Data Selection -->
        
        <!-- Category Selection Label -->
        <TextBlock x:Name="_txt_block2" Grid.Column="0" Grid.Row="0"
                   Text="{DynamicResource ColorSplasher.Labels.CategorySelection}"
                   FontWeight="Bold" FontSize="11" Margin="0,15,0,0"
                   ToolTip="{DynamicResource ColorSplasher.Tooltips.CategorySelection}"/>

        <!-- RIGHT COLUMN - Actions & Settings -->
        
        <!-- Manage Schemes Label -->
        <TextBlock x:Name="_lbl_manage_schemes" Grid.Column="2" Grid.Row="0"
                   Text="{DynamicResource ColorSplasher.Labels.ManageSchemes}"
                   FontWeight="Bold" FontSize="11" Margin="0,15,0,0"/>

        <!-- Category Dropdown -->
        <ComboBox x:Name="_categories" Grid.Column="0" Grid.Row="1"
                  Height="21" Margin="0,2,0,0"
                  DisplayMemberPath="Key"
                  ToolTip="{DynamicResource ColorSplasher.Tooltips.CategorySelection}"/>

        <!-- Save / Load Color Scheme Button -->
        <Button x:Name="_button_save_load_scheme" Grid.Column="2" Grid.Row="1"
                Content="{DynamicResource ColorSplasher.Buttons.SaveLoadScheme}"
                Height="28" Margin="0,0,0,0"
                FontSize="9" Click="save_load_color_scheme"
                ToolTip="{DynamicResource ColorSplasher.Tooltips.SaveLoadScheme}"/>

        <!-- Parameter Selection Label -->
        <TextBlock x:Name="_txt_block3" Grid.Column="0" Grid.Row="2"
                   Text="{DynamicResource ColorSplasher.Labels.ParameterSelection}"
                   FontWeight="Bold" FontSize="11" Margin="0,12,0,0"
                   ToolTip="{DynamicResource ColorSplasher.Tooltips.ParameterSelection}"/>

        <!-- Generate Colors Label -->
        <TextBlock x:Name="_lbl_generate_colors" Grid.Column="2" Grid.Row="2"
                   Text="{DynamicResource ColorSplasher.Labels.GenerateColors}"
                   FontWeight="Bold" FontSize="11" Margin="0,12,0,0"/>

        <!-- Search TextBox -->
        <TextBox x:Name="_search_box" Grid.Column="0" Grid.Row="3"
                 Height="20" Margin="0,2,0,0"
                 FontSize="9" GotFocus="search_box_enter" LostFocus="search_box_leave"
                 TextChanged="on_search_text_changed"
                 ToolTip="{DynamicResource ColorSplasher.Tooltips.SearchParameters}"/>

        <!-- Gradient Colors Button -->
        <Button x:Name="_button_gradient_colors" Grid.Column="2" Grid.Row="3"
                Content="{DynamicResource ColorSplasher.Buttons.GradientColors}"
                Height="28" Margin="0,0,0,0"
                FontSize="9" Click="button_click_gradient_colors"
                ToolTip="{DynamicResource ColorSplasher.Tooltips.GradientColors}"/>

        <!-- Parameters Dropdown -->
        <ComboBox x:Name="_list_box1" Grid.Column="0" Grid.Row="4"
                  Height="21" Margin="0,2,0,0"
                  DisplayMemberPath="Key"
                  SelectionChanged="check_item"
                  ToolTip="{DynamicResource ColorSplasher.Tooltips.ParameterSelection}"/>

        <!-- Random Colors Button -->
        <Button x:Name="_button_random_colors" Grid.Column="2" Grid.Row="4"
                Content="{DynamicResource ColorSplasher.Buttons.RandomColors}"
                Height="28" Margin="0,4,0,0"
                FontSize="9" Click="button_click_random_colors"
                ToolTip="{DynamicResource ColorSplasher.Tooltips.RandomColors}"/>

        <!-- Values Color Assignment Label -->
        <TextBlock x:Name="_txt_block4" Grid.Column="0" Grid.Row="5"
                   Text="{DynamicResource ColorSplasher.Labels.ValuesColorAssignment}"
                   FontWeight="Bold" FontSize="11" Margin="0,12,0,0"
                   ToolTip="{DynamicResource ColorSplasher.Tooltips.ValuesColorAssignment}"/>

        <!-- Apply Settings Label -->
        <TextBlock x:Name="_lbl_apply_settings" Grid.Column="2" Grid.Row="5"
                   Text="{DynamicResource ColorSplasher.Labels.ApplySettings}"
                   FontWeight="Bold" FontSize="11" Margin="0,12,0,0" />

        <!-- Values ListBox - Extended to bottom, aligned with Reset/Set Colors buttons -->
        <ListBox x:Name="list_box2" Grid.Column="0" Grid.Row="6" Grid.RowSpan="10"
                 DisplayMemberPath="Key"
                 Margin="0,2,0,0"
                 FontSize="9"
                 VerticalAlignment="Stretch"
                 ToolTip="{DynamicResource ColorSplasher.Tooltips.ValuesColorAssignment}"/>

        <!-- Checkbox: Line Color -->
        <CheckBox x:Name="_chk_line_color" Grid.Column="2" Grid.Row="6"
                  Content="{DynamicResource ColorSplasher.Checkboxes.ApplyLineColor}"
                  FontSize="9" Margin="0,2,0,0"
                  Checked="checkbox_changed" Unchecked="checkbox_changed"
                  ToolTip="{DynamicResource ColorSplasher.Tooltips.ApplyLineColor}"/>

        <!-- Checkbox: Foreground Pattern Color -->
        <CheckBox x:Name="_chk_foreground_pattern" Grid.Column="2" Grid.Row="7"
                  Content="{DynamicResource ColorSplasher.Checkboxes.ApplyForegroundPattern}"
                  FontSize="9" Margin="0,2,0,0"
                  Checked="checkbox_changed" Unchecked="checkbox_changed"
                  ToolTip="{DynamicResource ColorSplasher.Tooltips.ApplyForegroundPattern}"/>

        <!-- Checkbox: Background Pattern Color -->
        <CheckBox x:Name="_chk_background_pattern" Grid.Column="2" Grid.Row="8"
                  Content="{DynamicResource ColorSplasher.Checkboxes.ApplyBackgroundPattern}"
                  FontSize="9" Margin="0,2,0,0"
                  Checked="checkbox_changed" Unchecked="checkbox_changed"
                  ToolTip="{DynamicResource ColorSplasher.Tooltips.ApplyBackgroundPattern}"/>

        <!-- Create Legend Button -->
        <Button x:Name="_button_create_legend" Grid.Column="2" Grid.Row="9"
                Content="{DynamicResource ColorSplasher.Buttons.CreateLegend}"
                Height="28" Margin="0,10,0,0"
                FontSize="9" Click="button_click_create_legend"
                ToolTip="{DynamicResource ColorSplasher.Tooltips.CreateLegend}"/>

        <!-- Create View Filters Button -->
        <Button x:Name="_button_create_view_filters" Grid.Column="2" Grid.Row="10"
                Content="{DynamicResource ColorSplasher.Buttons.CreateViewFilters}"
                Height="28" Margin="0,4,0,0"
                FontSize="9" Click="button_click_create_view_filters"
                ToolTip="{DynamicResource ColorSplasher.Tooltips.CreateViewFilters}"/>

        <!-- Warning Message (Hidden by default) -->
        <TextBlock x:Name="_txt_block5" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="14"
                   Text="{DynamicResource ColorSplasher.Messages.SpacesColorScheme}"
                   FontSize="11" Foreground="Red" TextDecorations="Underline"
                   Margin="0,5,0,0" Visibility="Collapsed"/>

        <!-- Reset and Set Colors Buttons - At the very bottom, aligned to right column -->
        <Grid Grid.Column="2" Grid.Row="15" Margin="0,10,0,0" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="_button_reset_colors" Grid.Column="0"
                    Content="{DynamicResource ColorSplasher.Buttons.Reset}"
                    Height="32" FontSize="9" Click="button_click_reset"
                    ToolTip="{DynamicResource ColorSplasher.Tooltips.Reset}"/>
            <Button x:Name="_button_set_colors" Grid.Column="2"
                    Content="{DynamicResource ColorSplasher.Buttons.SetColors}"
                    Height="32" FontSize="9" Click="button_click_set_colors"
                    Style="{StaticResource SetColorsButtonStyle}"
                    ToolTip="{DynamicResource ColorSplasher.Tooltips.SetColors}"/>
        </Grid>
    </Grid>
</Window>
