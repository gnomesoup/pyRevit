<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <system:String x:Key="Title">Ferramenta de medir 3D</system:String>
    
    <system:String x:Key="CurrentMeasurement">Medida atual</system:String>
    <system:String x:Key="Point1NotSelected">Ponto 1: Não selecionado</system:String>
    <system:String x:Key="Point2NotSelected">Ponto 2: Não selecionado</system:String>
    <system:String x:Key="MeasurementHistory">Histórico de medidas</system:String>
    <system:String x:Key="NoMeasurementsYet">Nenhuma medida ainda</system:String>
    <system:String x:Key="PressESCToExit">Pressione ESC para sair</system:String>
    
    <system:String x:Key="Point1Format">Ponto 1: {}</system:String>
    <system:String x:Key="Point2Format">Ponto 2: {}</system:String>
    <system:String x:Key="DeltaXFormat">ΔX: {:>15}</system:String>
    <system:String x:Key="DeltaYFormat">ΔY: {:>15}</system:String>
    <system:String x:Key="DeltaZFormat">ΔZ: {:>15}</system:String>
    <system:String x:Key="DiagonalFormat">Diagonal: {}</system:String>
    <system:String x:Key="SlopeFormat">Inclinação: {}</system:String>
    
    <system:String x:Key="MeasurementHistoryEntry">Medida {}:\n  P1: {}\n  P2: {}\n  ΔX: {:>15}\n  ΔY: {:>15}\n  ΔZ: {:>15}\n  Diagonal: {}\n  Inclinação: {}</system:String>
    
    <system:String x:Key="Alert3DViewRequired">Ative uma vista 3D antes de usar a ferramenta de medir 3D.</system:String>
    <system:String x:Key="Alert3DViewRequiredTitle">Vista 3D necessária</system:String>
    <system:String x:Key="WarningBarPickFirstPoint">Selecione o primeiro ponto</system:String>
    <system:String x:Key="WarningBarPickSecondPoint">Selecione o segundo ponto</system:String>
    <system:String x:Key="AlertMeasurementCancelled">Medição cancelada devido a operação inválida. Tente novamente.</system:String>
    <system:String x:Key="AlertMeasurementErrorTitle">Erro de medição</system:String>
    <system:String x:Key="AlertUnexpectedError">Ocorreu um erro inesperado durante a medição. Verifique o log para detalhes.</system:String>
    <system:String x:Key="ToastMeasurementsCopied">Medidas copiadas para a área de transferência!</system:String>
    <system:String x:Key="ToastMeasure3DTitle">Medir 3D</system:String>
    <system:String x:Key="ProjectUnitLengthUnits">Unidades de comprimento (ajuste nas Unidades do projeto): \n</system:String>
    <system:String x:Key="ProjectUnitSlopeUnits">Unidades de inclinação (ajuste nas Unidades do projeto): \n</system:String>
</ResourceDictionary>